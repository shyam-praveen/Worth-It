<%- include("Partials/header") -%>
    <link rel="stylesheet" href="css/budgetResult2.css">

    <div class="jumbotron text-center">
        <h1>Worth It</h1>
        <p>Best FoodsBest offers Just Scroll down...!!!</p>
      </div>
      <div class="container">
        <h4>Best Foods Under Given Budget: Rs.<%= budget %><i class="fas fa-money-bill-wave"></i></i>
      </h4> <br>
        <div class="row">
            <% foods.forEach((food)=>{ %>
          <div class="col-lg-4 col-md-4 col-sm-4">
            <img src="https://images.unsplash.com/photo-1473093295043-cdd812d0e601?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" class="img-fluid" />
            <h4><%= food.foodName %></h4>
            <% for(let i=0;i<  food.rating ; i++){ %>
                <span class="fa fa-star checked"> </span>
            <% } %>
            <% for(let i=0;i< 5-food.rating ; i++){ %>
                <span class="fa fa-star"> </span>
            <% } %>
            
            <span class="flr">(Food Reviews)</span>
      
            <p>Restaurant Name: <%= food.resName %>
              <br>
              Price: <%= food.price %>
      
            </p>
      
          </div>
          <% }) %>
          
        </div>
      </div>
</body>
</html>

<%- include("Partials/footer") -%>